<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcomeBackground"
    >

<!--    <ImageView-->
<!--        android:id="@+id/backgroundImage"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/backgroundImg"-->
<!--        android:contentDescription="@string/background_image_desc" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42dp"
            android:textAlignment="center"
          android:textStyle="bold"
            android:text="Delicious pizzas delivered hot and fresh"
            />

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:src="@drawable/pizza_img"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="60dp"
            >

            <Button
                android:id="@+id/guestUserBtn"
                style="@style/CommonButtonStyle"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:text="Guest User" />

            <Button
                android:id="@+id/loginBtn"
                style="@style/CommonButtonStyle"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:text="Sign in" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="or"
                android:textAlignment="center"
                android:textColor="@color/label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signUpDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="Sign up"
                android:textStyle="bold"
                android:textColor="@color/textColor" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
