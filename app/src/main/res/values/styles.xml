<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="editTextStyle">@style/CommonEditTextStyle</item>
        <item name="errorTextViewStyle">@style/CommonErrorTextViewStyle</item>
    </style>

    <!-- EditTextStyle -->
    <style name="CommonEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/inputBackground</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/label</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Error Text style -->
    <style name="CommonErrorTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/errorText</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


</resources>
