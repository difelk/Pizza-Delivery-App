<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="editTextStyle">@style/CommonEditTextStyle</item>
        <item name="errorTextViewStyle">@style/CommonErrorTextViewStyle</item>
        <item name="CommonButtonStyle">@style/CommonButtonStyle</item>
    </style>

    <!-- EditTextStyle -->
    <style name="CommonEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/inputBackground</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/label</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Error Text style -->
    <style name="CommonErrorTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/errorText</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

<!--   submit button styles -->

    <style name="CommonButtonStyle" parent ="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


        <style name="TransparentButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/custom_transparent_button</item>
            <item name="android:textColor">#FFFFFF</item> <!-- Change this to the desired text color -->
            <item name="android:padding">10dp</item> <!-- Add padding if needed -->
        </style>
</resources>
